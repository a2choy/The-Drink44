<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Drawer.MyActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/text_border">

            <ImageView
                android:id="@+id/drawerIv"
                android:layout_width="50dp"
                android:layout_height="56dp"
                android:src="@drawable/top_icon01" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="설정"
                android:textSize="23sp" />

            <ImageView
                android:id="@+id/favIv"
                android:layout_width="50dp"
                android:layout_height="56dp" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl"
            android:layout_width="match_parent"
            android:layout_height="208dp"
            android:layout_below="@id/ll">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_centerInParent="true"
                android:layout_margin="10dp"
                android:src="@drawable/my_logo" />
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/rl"
            android:background="#c1c1c1" />
        <TextView
            android:id="@+id/logoutTv"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/rl"
            android:gravity="center"
            android:text="로그아웃"
            android:textColor="#333333"
            android:textSize="14sp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/logoutTv"
            android:background="#c1c1c1" />
        <TextView
            android:id="@+id/verTv"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/logoutTv"
            android:gravity="center"
            android:text="APP 정보 : 버전 1.2"
            android:textColor="#333333"
            android:textSize="14sp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/verTv"
            android:background="#c1c1c1" />
        <TextView
            android:id="@+id/policyTv"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/verTv"
            android:gravity="center"
            android:text="개인정보 취급방침 및 이용약관"
            android:textColor="#333333"
            android:textSize="14sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/policyTv"
            android:background="#c1c1c1" />

        <TextView
            android:id="@+id/leaveTv"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/policyTv"
            android:gravity="center"
            android:text="회원 탈퇴"
            android:textColor="#333333"
            android:textSize="14sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/leaveTv"
            android:background="#c1c1c1" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#ffffff">

        <TextView
            android:id="@+id/home"
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:layout_marginLeft="25dp"
            android:gravity="center|left"
            android:text="Home"
            android:textSize="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/home"
            android:background="#333333" />

        <TextView
            android:id="@+id/myTv"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/home"
            android:layout_marginLeft="25dp"
            android:gravity="center|left"
            android:text="마이 페이지"
            android:textSize="17sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/myTv"
            android:background="#333333" />

        <TextView
            android:id="@+id/noticeTv"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/myTv"
            android:layout_marginLeft="25dp"
            android:gravity="center|left"
            android:text="공지사항"
            android:textSize="17sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/noticeTv"
            android:background="#333333" />

        <TextView
            android:id="@+id/askTv"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/noticeTv"
            android:layout_marginLeft="25dp"
            android:gravity="center|left"
            android:text="문의하기"
            android:textSize="17sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/askTv"
            android:background="#333333" />


        <TextView
            android:id="@+id/howTv"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/askTv"
            android:layout_marginLeft="25dp"
            android:gravity="center|left"
            android:text="사용 방법 안내"
            android:textSize="17sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/howTv"
            android:background="#333333" />

        <TextView
            android:id="@+id/settingTv"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/howTv"
            android:layout_marginLeft="25dp"
            android:gravity="center|left"
            android:text="설정"
            android:textSize="17sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/settingTv"
            android:background="#333333" />


    </RelativeLayout>

</android.support.v4.widget.DrawerLayout>