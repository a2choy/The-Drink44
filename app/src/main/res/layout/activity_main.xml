<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/text_border">

            <ImageView
                android:id="@+id/drawerIv"
                android:layout_width="50dp"
                android:layout_height="56dp"
                android:src="@drawable/top_icon01" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingLeft="45dp"
                android:text="더마셔"
                android:textSize="23sp" />

            <ImageView
                android:id="@+id/searchIv"
                android:layout_width="50dp"
                android:layout_height="56dp"
                android:src="@drawable/top_icon02" />

            <ImageView
                android:id="@+id/favIv"
                android:layout_width="50dp"
                android:layout_height="56dp"
                android:src="@drawable/top_icon03" />
        </LinearLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="166dp"
            android:layout_below="@+id/ll"
            android:layout_margin="10dp"/>

        <LinearLayout
            android:layout_below="@+id/ll"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="166dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="15dp"
            android:padding="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/dotTv1"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="bottom"
                android:src="@drawable/circle_on" />

            <ImageView
                android:id="@+id/dotTv2"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="bottom"
                android:src="@drawable/circle_off" />

            <ImageView
                android:id="@+id/dotTv3"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="bottom"
                android:src="@drawable/circle_off" />

        </LinearLayout>

        <ListView
            android:id="@+id/mainLv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/pager"
            android:layout_margin="10dp"
            android:dividerHeight = "3dp"/>

        <LinearLayout
            android:id="@+id/layout"
            android:layout_width="200dp"
            android:layout_height="300dp"
            android:layout_centerInParent="true"
            android:background="@drawable/text_border"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/seaTv"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_margin="10dp"
                android:text="동남아"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/borderl1"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/seaTv"
                android:background="@drawable/text_border_1dp" />

            <TextView
                android:id="@+id/euroTv"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_below="@id/borderl1"
                android:layout_margin="10dp"
                android:text="유럽"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/borderl2"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/euroTv"
                android:background="@drawable/text_border_1dp" />

            <TextView
                android:id="@+id/usaTv"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_below="@id/borderl2"
                android:layout_margin="10dp"
                android:text="미국"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/borderl3"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/explainTv"
                android:background="@drawable/text_border_1dp" />

            <TextView
                android:id="@+id/oceTv"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_below="@id/borderl3"
                android:layout_margin="10dp"
                android:text="오세아니아"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/borderl4"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/settingTv"
                android:background="@drawable/text_border_1dp" />

            <TextView
                android:id="@+id/allTv"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_below="@id/borderl4"
                android:layout_margin="10dp"
                android:text="모두 보기"
                android:textSize="30sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/mapIv"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:src="@drawable/map_icon"/>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#ffffff">

        <TextView
            android:id="@+id/home"
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:text="Home"
            android:layout_marginLeft="25dp"
            android:gravity="center|left"
            android:textSize="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/home"
            android:background="@drawable/text_border_1dp" />

        <TextView
            android:id="@+id/myTv"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/home"
            android:gravity="center|left"
            android:layout_marginLeft="25dp"
            android:text="마이 페이지"
            android:textSize="17sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/myTv"
            android:background="@drawable/text_border_1dp" />

        <TextView
            android:id="@+id/noticeTv"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/myTv"
            android:gravity="center|left"
            android:layout_marginLeft="25dp"
            android:text="공지사항"
            android:textSize="17sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/noticeTv"
            android:background="@drawable/text_border_1dp" />

        <TextView
            android:id="@+id/askTv"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/noticeTv"
            android:gravity="center|left"
            android:layout_marginLeft="25dp"
            android:text="문의하기"
            android:textSize="17sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/askTv"
            android:background="@drawable/text_border_1dp" />


        <TextView
            android:id="@+id/howTv"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/askTv"
            android:gravity="center|left"
            android:layout_marginLeft="25dp"
            android:text="사용 방법 안내"
            android:textSize="17sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/howTv"
            android:background="@drawable/text_border_1dp" />

        <TextView
            android:id="@+id/settingTv"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/howTv"
            android:gravity="center|left"
            android:layout_marginLeft="25dp"
            android:text="설정"
            android:textSize="17sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/settingTv"
            android:background="@drawable/text_border_1dp" />


    </RelativeLayout>
</android.support.v4.widget.DrawerLayout>